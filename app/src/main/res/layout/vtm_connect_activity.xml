<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#fff"
    android:layout_height="fill_parent">


    <Button
        android:id="@+id/view_recordings_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/view_recordings"
        android:layout_marginTop="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="View Recorded Video"
        android:textColor="#000"
        android:layout_below="@id/view_recordings_btn"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="Record A Video"
        android:id="@+id/textView"
        android:layout_below="@+id/toggle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/live_view_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:background="@drawable/live_view"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Live View"
        android:textColor="#000"
        android:id="@+id/textView5"
        android:layout_below="@+id/live_view_btn"
        android:layout_alignLeft="@+id/view_recordings_btn"
        android:layout_alignStart="@+id/view_recordings_btn"
        android:layout_marginTop="23dp" />

    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:layout_marginTop="80dp"
        android:layout_below="@id/view_recordings_btn"
        android:layout_alignLeft="@+id/live_view_btn"
        android:layout_alignStart="@+id/live_view_btn" />


</RelativeLayout>